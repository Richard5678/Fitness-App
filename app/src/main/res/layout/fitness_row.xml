<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fitness_row"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/fitness_row_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1  "
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fitness_row_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 18"
                app:layout_constraintStart_toEndOf="@+id/fitness_row_number"
                app:layout_constraintTop_toTopOf="@+id/fitness_row_number" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="390dp"
            android:layout_height="2dp"
            android:layout_gravity="right|bottom"
            android:background="@android:color/darker_gray" />

    </androidx.cardview.widget.CardView>

</LinearLayout>





