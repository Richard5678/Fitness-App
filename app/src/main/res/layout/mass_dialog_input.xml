<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="270dp"
    android:layout_height="150dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your mass first:"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/mass_dialog_number"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Mass"/>
            <Spinner
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/mass_dialog_unit"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>

        <Button
            android:id="@+id/mass_dialog_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>